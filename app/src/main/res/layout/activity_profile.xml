<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    tools:context="chatapp.com.chatapp.ProfileActivity">

    <include
        android:id="@+id/profile_bar"
        layout="@layout/app_bar_layout"></include>

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="DisplayName"
        android:textColor="@android:color/background_light"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_bar"
        android:scaleType="fitXY"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Hi There, I am Using ChatApp"
        android:textColor="@android:color/background_light"
        android:textSize="16dp" />

    <Button
        android:id="@+id/profile_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_decline_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="@color/colorAccent"
        android:text="SEND FRIEND REQUEST"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/profile_total_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Friends"
        android:textColor="@android:color/background_light"
        android:textSize="16dp"
        android:layout_above="@+id/profile_send_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/profile_decline_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profile_send_button"
        android:layout_alignLeft="@+id/profile_send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/profile_send_button"
        android:layout_alignStart="@+id/profile_send_button"
        android:layout_marginBottom="25dp"
        android:background="@color/colorAccent"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
